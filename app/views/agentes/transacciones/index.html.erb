<h2>Transacciones</h2>

<div class="btnNuevo">
	<i class="fas fa-plus"></i> <%= link_to 'Transaccion', new_agente_transaccion_path(@agente) %>
</div>

<table id="transacciones" class="table">
	<thead>
		<tr>
			<th>Valor</th>
			<th>Medio de Pago</th>
			<th>Fecha de Pago</th>
			<th>Editar</th>
			<th>Eliminar</th>
		</tr>
	</thead>
	<tbody>
		<%= render @transacciones %>
	</tbody>
</table>

<div class="grafica" id="hh">
	<h1>Estadistica de Transacciones</h1>
	<%= area_chart(@data) %>
</div>
