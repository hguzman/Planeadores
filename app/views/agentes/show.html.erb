<h2>Informaci√≥n del Agente</h2>

<div class="botones">
	<div class="editar btn btn-success">
		<i class="fas fa-user-edit"></i> <%= link_to 'Editar', edit_agente_path(@agente) %>
	</div>

	<div class="planeaciones btn btn-secondary">
		<i class="fas fa-book"></i> <%= link_to 'Ver Planeaciones', agente_planeaciones_path(@agente) %>
	</div>

	<div class="transacciones btn btn-secondary">
		<i class="fas fa-dollar-sign"></i> <%= link_to 'Ver Transacciones', agente_transacciones_path(@agente) %>
	</div>

	<div class="regresar btn btn-info">
		<i class="fas fa-undo-alt"></i> <%= link_to 'Regresar', agentes_path %>
	</div>
</div>

<dl class="infoShow">
	<dt>Primer Nombre:</dt>
	<dd><%= @agente.primerNombre.capitalize %></dd>

	<dt>Segundo Nombre:</dt>
	<dd><%= @agente.segundoNombre.capitalize %></dd>

	<dt>Primer Apellido:</dt>
	<dd><%= @agente.primerApellido.capitalize %></dd>

	<dt>Nombre UDS:</dt>
	<dd><%= @agente.nombreUds.capitalize %></dd>

	<dt>Modalidad:</dt>
	<dd><%= @agente.modalidad.capitalize %></dd>

	<dt>Correo:</dt>
	<dd><%= @agente.correo.capitalize %></dd>

	<dt>Cedula:</dt>
	<dd><%= @agente.cedula %></dd>
</dl>
